{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@tidl/components": ["components/index.ts"],
      "@tidl/components/*": ["components/*"],
      "@tidl/util": ["util/index.ts"],
      "@tidl/analytics": ["util/analytics.ts"],
      "@tidl/services": ["api/index.ts"],
      "@tidl/styles": ["styles/index.ts"],
      "@tidl/types": ["interfaces/index.ts"],
      "@tidl/constants": ["constants/index.ts"],
      "@tidl/state/*": ["state/*"],
      "@tidl/hooks": ["hooks/index.ts"],
      "@tidl/tests/*": ["../tests/*"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "sourceMap": true
  },
  "exclude": ["node_modules", "src/**/*.spec.ts"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
