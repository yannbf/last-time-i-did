{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@tidl/components": [
        "components/index.ts"
      ],
      "@tidl/util": [
        "util/index.ts"
      ],
      "@tidl/services": [
        "api/index.ts"
      ],
      "@tidl/styles": [
        "styles/index.ts"
      ],
      "@tidl/types": [
        "interfaces/index.ts"
      ],
      "@tidl/constants": [
        "constants/index.ts"
      ],
      "@tidl/state/*": [
        "state/*"
      ],
      "@tidl/tests/*": [
        "../tests/*"
      ]
    },
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "sourceMap": false,
    "experimentalDecorators": true,
    "noImplicitUseStrict": true,
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "out",
    ".next"
  ]
}